<%- include ('./partials/header.ejs') %>
<%- include ('./partials/homenavbar.ejs') %>

<body>
    <div class="container">
        <hr>
        <div class="jumbotron">
            <h1 class="display-4">Bem vindo</h1>
            <p class="lead">Meu portfolio de um blog criado com NodeJS, EJS e Bootstrap</p>
            <hr class="my-4">
            <p>Para mais informações clique no botão abaixo</p>
            <a class="btn btn-primary btn-lg" href="#" role="button">Saiba mais</a>
        </div>
        <hr>
        <% articles.forEach(article => { %> 
            <div class="card">
                <div class="card-header">
                    <h2> <%= article.title %> </h2>
                </div>
                <div class="card-body">
                    <a href="/<%= article.slug %>" class="btn btn-dark">Ler artigo</a>
                </div>
            </div>
            <br>
        <% }) %>

        <div class="row">
            <div class="col col-12">
                <a href="/articles/page/2" style="float: right;">Next >>></a>
            </div>
            <hr>
        </div>
        <hr>
    </div>
</body>

